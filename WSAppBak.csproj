<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Produce a console EXE -->
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>false</SelfContained>    <!-- or true if you want the framework bundled -->
    <PublishSingleFile>false</PublishSingleFile><!-- enable if you want single-file -->
    <IncludeAllContentForSelfExtract>false</IncludeAllContentForSelfExtract><!-- only for single-file -->

    <!-- Prevent auto-generated AssemblyInfo duplicates -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <!--
      Publish everything under your tools\ folder:
      - the four helper EXEs
      - their .manifest files
      - any side-by-side DLLs (appxpackaging.dll, appxsip.dll)
      - and their manifests
    -->
    <Content Include="tools\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <!-- for single-file bundles, you’d add:
      <IncludeInSingleFile>true</IncludeInSingleFile>
      <BundleRelativePath>tools\%(RecursiveDir)%(Filename)%(Extension)</BundleRelativePath>
      -->
    </Content>
  </ItemGroup>

</Project>
