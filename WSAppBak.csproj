<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Produce a console EXE -->
    <OutputType>Exe</OutputType>
    <!-- Target the Windows-specific .NET 8.0 runtime -->
    <TargetFramework>net8.0-windows</TargetFramework>
    <!-- Match your prior AnyCPU setting -->
    <PlatformTarget>AnyCPU</PlatformTarget>
    <!-- Assembly metadata -->
    <AssemblyName>WSAppBak</AssemblyName>
    <RootNamespace>WSAppBak</RootNamespace>
    <ApplicationVersion>1.0.0.0</ApplicationVersion>

    <!-- Prevent auto-generation of AssemblyInfo to avoid duplicates -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <!-- Copy all external tool executables into the WSAppBak subfolder at output -->
  <ItemGroup>
    <None Include="WSAppBak\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>

</Project>
